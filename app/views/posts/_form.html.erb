<%= form_with model: post do |form| %>
<%= form.label(:title, 'Title') %>
<%= form.text_field(:title, placeholder: 'A short summary') %>
<%= form.label(:body, 'Anonymous Message') %>
<%= form.text_area(:body, placeholder: 'Your secret goes here...') %>
<%= form.submit class: "button is-success" %>
<% end %>